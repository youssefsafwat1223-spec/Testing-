  position: absolute; bottom: -10vh; width: 10px; height: 10px; border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), rgba(255,255,255,0.2));
  box-shadow: 0 0 12px rgba(255,255,255,0.06);
  opacity: 0.85; transform: translateY(0);
  animation: bubble-rise var(--dur, 8s) linear infinite;
  mix-blend-mode: screen;
}
@keyframes bubble-rise { 0% { transform: translateY(0) scale(0.7); opacity: 0.0 } 10% { opacity: 0.6 } 100% { transform: translateY(-140vh) scale(1.05); opacity: 0.0 } }

/* Fish layer */
.fish-layer { position: absolute; inset: 0; z-index: 4; pointer-events: none; overflow: visible; }

/* Individual fish placement and animation controllers */
.fish { position: absolute; width: 28vw; height: auto; opacity: 0.95; transform-origin: center; will-change: transform, filter; }
.fish-1 { top: 22%; left: -18%; animation: swim-right 22s linear infinite; filter: drop-shadow(0 6px 12px rgba(0,0,0,0.25)); transform: scale(0.9); }
.fish-2 { top: 54%; left: 110%; animation: swim-left 18s linear infinite; transform: scale(0.7); }
.fish-3 { top: 70%; left: -22%; animation: swim-right 28s linear infinite; transform: scale(1.05); }

/* Swimming keyframes (subtle body wiggle via rotate) */
@keyframes swim-right {
  0% { transform: translateX(0) scaleY(1) rotate(0deg); opacity:0 }
  5% { opacity:1 }
  50% { transform: translateX(130vw) translateY(-6vh) scaleY(1.02) rotate(-3deg); }
  100% { transform: translateX(260vw) translateY(0) scaleY(1) rotate(0deg); opacity:0 }
}
@keyframes swim-left {
  0% { transform: translateX(0) scaleY(1) rotate(0deg); opacity:0 }
  5% { opacity:1 }
  50% { transform: translateX(-130vw) translateY(6vh) scaleY(1.02) rotate(3deg); }
  100% { transform: translateX(-260vw) translateY(0) scaleY(1) rotate(0deg); opacity:0 }
}

/* Slides container */
