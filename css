.underwater-gradient {
  position: absolute; inset: 0;
  background: linear-gradient(180deg, #003049 0%, #0077B6 45%, #0096C7 100%);
  filter: saturate(110%);
  transform: translateZ(0);
}
.light-rays {
  position: absolute; inset: -10% -10%;
  background-image: radial-gradient(ellipse at 20% 10%, rgba(255,255,255,0.06), transparent 15%),
                    radial-gradient(ellipse at 80% 5%, rgba(255,255,255,0.04), transparent 18%);
  mix-blend-mode: screen;
  animation: rays-drift 18s linear infinite;
  opacity: 0.6;
}
@keyframes rays-drift { 0% { transform: translateY(-4%); } 50% { transform: translateY(4%); } 100% { transform: translateY(-4%); } }

/* Floating fog */
.floating-fog { position:absolute; inset:0; background: linear-gradient(180deg, rgba(0,20,30,0.12), transparent 30%); opacity: 0.9; filter: blur(30px); }

/* Bubbles */
